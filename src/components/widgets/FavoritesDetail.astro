<script>
  // Tab switching logic with animation
  const servicesTab = document.getElementById('services-tab');
  const organizationsTab = document.getElementById('organizations-tab');
  const servicesContent = document.getElementById('services-content');
  const organizationsContent = document.getElementById('organizations-content');

  const toggleTabs = (show, hide) => {
    show.classList.remove('hidden');
    show.classList.add('opacity-100');
    hide.classList.add('hidden');
    hide.classList.remove('opacity-100');
  };

  servicesTab.addEventListener('click', () => {
    toggleTabs(servicesContent, organizationsContent);
    servicesTab.classList.add('text-teal-500', 'border-teal-500');
    organizationsTab.classList.remove('text-teal-500', 'border-teal-500');
    organizationsTab.classList.add('text-gray-500');
  });

  organizationsTab.addEventListener('click', () => {
    toggleTabs(organizationsContent, servicesContent);
    organizationsTab.classList.add('text-teal-500', 'border-teal-500');
    servicesTab.classList.remove('text-teal-500', 'border-teal-500');
    servicesTab.classList.add('text-gray-500');
  });
</script>

