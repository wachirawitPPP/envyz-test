---
import paymentCoin from '~/assets/images/payment-coin.png';
import paymentDedit from '~/assets/images/payment-dedit.png';
import { Image } from 'astro:assets';

//  const onCredit = 0;
//  const hasCredit = 0;
---

<div
  id="static-modal"
  data-modal-backdrop="static"
  tabindex="-1"
  aria-hidden="true"
  class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full backdrop-contrast-50"
>
  <div class="relative p-4 w-full max-w-2xl max-h-full">
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t bg-teal-500">
        <h3 class="text-xl font-semibold text-white dark:text-white">ยืนยันการชำระเงิน</h3>
        <button
          type="button"
          class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
          data-modal-hide="static-modal"
        >
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>

      <div class="p-4 md:p-5 space-y-4">
        <div class="flex flex-row items-center">
          <Image src={paymentCoin} alt="" srcset="" width={50} height={50} />
          <span class="ml-2 font-bold">จำนวนเครดิตในระบบ: <span class="text-teal-500 ml-4">฿10,000.00</span></span>
        </div>
        <div class="flex flex-row items-center">
          <Image src={paymentDedit} alt="" srcset="" width={50} height={50} />
          <span class="ml-2 font-bold">จำนวนเครดิตในระบบ: <span class="text-teal-500 ml-4">฿10,000.00</span></span>
        </div>
      </div>
      <div class="flex justify-end items-end p-4 md:p-5 border-t border-gray-200 rounded-b">
        <button
          data-modal-hide="static-modal"
          type="button"
          class="py-2 px-5 mr-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-teal-500 focus:z-10 focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700"
          >ยกเลิก</button
        >
        <button
          class="text-white mr-2 bg-teal-500 hover:bg-teal-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-teal-500 dark:hover:bg-teal-500 dark:focus:ring-teal-500 btn-completed"
          >ยืนยันการชำระเงิน</button
        >
      </div>
    </div>
  </div>
</div>
