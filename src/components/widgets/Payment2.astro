<body class="bg-gray-50 min-h-screen flex justify-center items-center">
    <div class="max-w-3xl w-full mx-auto bg-white p-6 rounded-md shadow-md">
      <!-- Progress Bar -->
      <div class="flex flex-col sm:flex-row justify-between items-center mb-6">
        <!-- Step 1 -->
        <div class="flex items-center space-x-1 mb-3 sm:mb-0">
          <div class="w-8 h-8 flex items-center justify-center bg-[#00ad98] text-white text-sm font-bold rounded-full">1</div>
          <span class="text-sm text-gray-700 font-medium">Cart</span>
        </div>
        <!-- Line between steps -->
        <div class="flex-1 h-0.5 bg-[#00ad98] mx-2 hidden sm:block"></div>
        <!-- Step 2 -->
        <div class="flex items-center space-x-1 mb-3 sm:mb-0">
          <div class="w-8 h-8 flex items-center justify-center bg-[#00ad98] text-white text-sm font-bold rounded-full">2</div>
          <span class="text-sm text-gray-700 font-medium">Your Details & Payment</span>
        </div>
        <!-- Line between steps -->
        <div class="flex-1 h-0.5 bg-gray-300 mx-2 hidden sm:block"></div>
        <!-- Step 3 -->
        <div class="flex items-center space-x-1">
          <div class="w-8 h-8 flex items-center justify-center bg-gray-300 text-gray-700 text-sm font-bold rounded-full">3</div>
          <span class="text-sm text-gray-700 font-medium">Order Completed</span>
        </div>
      </div>
  
      <!-- Your Details -->
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-4 text-center">Your Details</h2>
        <div class="space-y-4">
          <!-- Name Field -->
          <div>
            <div class="flex flex-col sm:flex-row items-start sm:items-center mb-3">
              <label class="text-sm text-gray-600 mb-1 sm:mb-0 sm:mr-3 w-full sm:w-32" for="name">Name</label>
              <div class="flex items-center border border-gray-300 rounded-md focus-within:ring-2 focus-within:ring-[#00ad98] w-full">
                <img src="/src/assets/images/user.png" alt="User Icon" class="h-5 w-5 ml-3 text-gray-400" />
                <input
                  id="name"
                  type="text"
                  placeholder="Enter your name"
                  class="w-full px-3 py-2 focus:outline-none text-sm"
                />
              </div>
            </div>
          </div>
          <!-- Email Field -->
          <div>
            <div class="flex flex-col sm:flex-row items-start sm:items-center mb-3">
              <label class="block text-sm text-gray-600 mb-1 sm:mb-0 sm:mr-3 w-full sm:w-32" for="email">Email</label>
              <div class="flex items-center border border-gray-300 rounded-md focus-within:ring-2 focus-within:ring-[#00ad98] w-full">
                <img src="/src/assets/images/envelope.png" alt="Email Icon" class="h-5 w-5 ml-3 text-gray-400" />
                <input
                  id="email"
                  type="email"
                  placeholder="Enter your email"
                  class="w-full px-3 py-2 focus:outline-none text-sm"
                />
              </div>
            </div>
          </div>
          <!-- Phone Field -->
          <div>
            <div class="flex flex-col sm:flex-row items-start sm:items-center mb-3">
              <label class="block text-sm text-gray-600 mb-1 sm:mb-0 sm:mr-3 w-full sm:w-32" for="phone">Phone No</label>
              <div class="flex items-center border border-gray-300 rounded-md focus-within:ring-2 focus-within:ring-[#00ad98] w-full">
                <img src="/src/assets/images/phone-call.png" alt="Phone Icon" class="h-5 w-5 ml-3 text-gray-400" />
                <input
                  id="phone"
                  type="tel"
                  placeholder="Enter your phone number"
                  class="w-full px-3 py-2 focus:outline-none text-sm"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
  
      <!-- Payment Methods -->
      <div class="mb-6">
        <h2 class="text-lg font-semibold text-gray-700 mb-4">Select a payment method</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <input id="installment" type="radio" name="payment" class="mr-2" />
            <label for="installment" class="text-gray-700">Installment Plan</label>
          </div>
          <div>
            <input id="promptpay" type="radio" name="payment" class="mr-2" />
            <label for="promptpay" class="text-gray-700">PromptPay</label>
          </div>
          <div>
            <input id="creditcard" type="radio" name="payment" class="mr-2" />
            <label for="creditcard" class="text-gray-700">Credit Card / Debit Card</label>
          </div>
          <div>
            <input id="internetbanking" type="radio" name="payment" class="mr-2" />
            <label for="internetbanking" class="text-gray-700">Internet Banking</label>
          </div>
          <div>
            <input id="paypal" type="radio" name="payment" class="mr-2" />
            <label for="paypal" class="text-gray-700">PayPal</label>
          </div>
          <div>
            <input id="truemoney" type="radio" name="payment" class="mr-2" />
            <label for="truemoney" class="text-gray-700">True Money Wallet</label>
          </div>
        </div>
      </div>
  
      <!-- Buttons -->
      <div class="flex justify-between flex-wrap">
        <button class="bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400">
          Previous
        </button>
        <button class="bg-[#00ad98] text-white px-4 py-2 rounded-md hover:bg-[#00957a]">
          Next
        </button>
      </div>
    </div>
  </body>
  