      <script>
        // Tab switching logic
        const toRateTab = document.getElementById('to-rate-tab');
        const myReviewTab = document.getElementById('my-review-tab');
        const toRateContent = document.getElementById('to-rate-content');
        const myReviewContent = document.getElementById('my-review-content');

        const toggleTabs = (showTab, hideTab, showContent, hideContent) => {
          showTab.classList.add('text-teal-500', 'border-teal-500');
          showTab.classList.remove('text-gray-500');
          hideTab.classList.remove('text-teal-500', 'border-teal-500');
          hideTab.classList.add('text-gray-500');
          showContent.classList.remove('hidden');
          hideContent.classList.add('hidden');
        };

        toRateTab.addEventListener('click', () => {
          toggleTabs(toRateTab, myReviewTab, toRateContent, myReviewContent);
        });

        myReviewTab.addEventListener('click', () => {
          toggleTabs(myReviewTab, toRateTab, myReviewContent, toRateContent);
        });
      </script>
