<div class="relative overflow-hidden w-full max-w-6xl mx-auto">
  <!-- Slider Container -->
  <div class="flex transition-transform duration-500 ease-in-out slider">
    <div class="flex-shrink-0 w-full">
      <img
        src="https://static.hd.co.th/system/image_attachments/images/000/338/724/original/Hero_Carousel-_Brazilian_Laser_at_STC.png"
        alt="Promotion 1"
        class="w-full h-48 object-cover object-center"
      />
    </div>
    <div class="flex-shrink-0 w-full">
      <img
        src="https://static.hd.co.th/system/image_attachments/images/000/320/600/original/Hero_Carousel_-CO2_Laser.png"
        alt="Promotion 2"
        class="w-full h-48 object-cover object-center"
      />
    </div>
    <div class="flex-shrink-0 w-full">
      <img
        src="https://static.hd.co.th/system/image_attachments/images/000/305/837/original/Hero_Carousel-morpheus_9.png"
        alt="Promotion 3"
        class="w-full h-48 object-cover object-center"
      />
    </div>
    <div class="flex-shrink-0 w-full">
      <img
        src="https://static.hd.co.th/system/image_attachments/images/000/363/487/original/Hero_Carousel_-_Office_Syndrome.png"
        alt="Promotion 4"
        class="w-full h-48 object-cover object-center"
      />
    </div>
  </div>

  <!-- Navigation Buttons -->
  <button
  class="absolute top-1/2 left-2 transform -translate-y-1/2 bg-white bg-opacity-10 border border-gray-200 border-opacity-20 text-black p-2 md:p-3 lg:p-4 rounded-full shadow-lg hover:bg-opacity-30 hover:border-opacity-50 hover:shadow-xl transition duration-300 prev-btn"
>
  ‹
</button>
<button
  class="absolute top-1/2 right-2 transform -translate-y-1/2 bg-white bg-opacity-10 border border-gray-200 border-opacity-20 text-black p-2 md:p-3 lg:p-4 rounded-full shadow-lg hover:bg-opacity-30 hover:border-opacity-50 hover:shadow-xl transition duration-300 next-btn"
>
  ›
</button>
</div>

<script>
  const slider = document.querySelector('.slider');
const nextBtn = document.querySelector('.next-btn');
const prevBtn = document.querySelector('.prev-btn');

let currentIndex = 0;
const slides = document.querySelectorAll('.slider > div'); // Adjusted for Tailwind layout
const totalSlides = slides.length;

// Move to the next slide
nextBtn.addEventListener('click', () => {
  currentIndex = (currentIndex + 1) % totalSlides;
  updateSlider();
});

// Move to the previous slide
prevBtn.addEventListener('click', () => {
  currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
  updateSlider();
});

// Update slider position
function updateSlider() {
  slider.style.transform = `translateX(-${currentIndex * 100}%)`;
}

// Auto-slide (Optional)
setInterval(() => {
  currentIndex = (currentIndex + 1) % totalSlides;
  updateSlider();
}, 5000); // 5000ms = 5 seconds
</script>

