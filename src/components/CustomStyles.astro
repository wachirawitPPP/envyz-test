---
import '@fontsource-variable/inter';

import "@fontsource/kanit/200.css";

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Kanit', sans-serif;
    --aw-font-serif: 'Kanit', sans-serif;
    --aw-font-heading: 'Kanit', sans-serif;

    --aw-color-primary: #00AD98;
    --aw-color-secondary: #53b6ac;
    --aw-color-accent: rgb(45, 136, 131);

    --aw-color-text-heading: #111C2D;
    --aw-color-text-default: #111C2D;
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: #ffffff;

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Kanit', sans-serif;
    --aw-font-serif: 'Kanit', sans-serif;
    --aw-font-heading: 'Kanit', sans-serif;

    --aw-color-primary: #00AD98;
    --aw-color-primary-gradient: linear-gradient(90deg, #00AD98 0%, #000000 100%);
    --aw-color-secondary: #53b6ac;
    --aw-color-accent: rgb(45, 136, 131);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(9, 11, 24);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>

